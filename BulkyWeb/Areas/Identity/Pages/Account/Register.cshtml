@page
@model RegisterModel


<section class="py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="mb-5">
                    <h2 class="display-5 fw-bold text-center">Sign up</h2>
                    <p class="text-center m-0">Don you have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in</a></p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row gy-3">
                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="First Name" autocomplete="off" required>
                                <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Last Name" autocomplete="off" required>
                                <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.UserName" class="form-control" aria-required="true" placeholder="UserName" autocomplete="off" required >
                                <label asp-for="Input.UserName" class="form-label" >User Name</label>
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="email" asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" autocomplete="off" required>
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="email" asp-for="Input.ConfirmEmail" class="form-control" aria-required="true" autocomplete="off" placeholder="Confirm Email" required>
                                <label asp-for="Input.ConfirmEmail" class="form-label">Confirm Email</label>
                                <span asp-validation-for="Input.ConfirmEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="password" asp-for="Input.Password" class="form-control" aria-required="true" placeholder="Password" autocomplete="off" required>
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="Confirm Password" autocomplete="off" required>
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="Street Address" autocomplete="off" required>
                                <label asp-for="Input.StreetAddress" class="form-label">Street Address</label>
                                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" autocomplete="off" required>
                                <label asp-for="Input.City" class="form-label">City</label>
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.State" class="form-control" aria-required="true" placeholder="State" autocomplete="off" required>
                                <label asp-for="Input.State" class="form-label">State</label>
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" autocomplete="off" required>
                                <label asp-for="Input.PostalCode" class="form-label">Postal Code</label>
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="tel" asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Phone Number" autocomplete="off" required>
                                <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="form-select">
                                    <option disabled selected>Select Role</option>
                                </select>
                            </div>
                        </div>

                        @if (Model.Input.UserNames != null && Model.Input.UserNames.Any())
                        {
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.UserName" asp-items="@(Model.Input.UserNames)" class="form-select">
                                        <option disabled selected>Select User Name</option>
                                    </select>
                                </div>
                            </div>
                        }
                        <div class="col-12">
                            <div class="d-grid">
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-center">
                            <div class="bg-dark w-100" style="height: 1px; --bs-bg-opacity: .1;"></div>
                            <div class="px-3">or</div>
                            <div class="bg-dark w-100" style="height: 1px; --bs-bg-opacity: .1;"></div>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <div class="d-flex gap-3 flex-column">
                            <a href="#!" class="btn bsb-btn-2xl btn-outline-dark rounded-0 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google text-danger" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                </svg>
                                <span class="ms-2 fs-6 flex-grow-1">Register with Google</span>
                            </a>
                            <a href="#!" class="btn bsb-btn-2xl btn-outline-dark rounded-0 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-apple text-dark" viewBox="0 0 16 16">
                                    <path d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516.024.034 1.52.087 2.475-1.258.955-1.345.762-2.391.728-2.43Zm3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422.212-2.189 1.675-2.789 1.698-2.854.023-.065-.597-.79-1.254-1.157a3.692 3.692 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56.244.729.625 1.924 1.273 2.796.576.984 1.34 1.667 1.659 1.899.319.232 1.219.386 1.843.067.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758.347-.79.505-1.217.473-1.282Z" />
                                    <path d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516.024.034 1.52.087 2.475-1.258.955-1.345.762-2.391.728-2.43Zm3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422.212-2.189 1.675-2.789 1.698-2.854.023-.065-.597-.79-1.254-1.157a3.692 3.692 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56.244.729.625 1.924 1.273 2.796.576.984 1.34 1.667 1.659 1.899.319.232 1.219.386 1.843.067.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758.347-.79.505-1.217.473-1.282Z" />
                                </svg>
                                <span class="ms-2 fs-6 flex-grow-1">Register with Apple</span>
                            </a>
                            <a href="#!" class="btn bsb-btn-2xl btn-outline-dark rounded-0 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook text-primary" viewBox="0 0 16 16">
                                    <path d="M8.537 8.602h-.79V16H5.862V8.602H4.6V6.384h1.262V4.892c0-1.092.518-2.795 2.78-2.795l2.041.008v2.267h-1.48c-.242 0-.58.123-.58.645v1.367h2.039l-.226 2.218h-1.813z" />
                                </svg>
                                <span class="ms-2 fs-6 flex-grow-1">Register with Facebook</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}



